<div class="row justify-content-lg-center g-3">
    <h1><%= title  %> Tỉ Số</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="FullName">Tên</span>
            <input id="FullName" type="text" class="form-control" placeholder="Tên" aria-label="Name" aria-describedby="Item Name" name ="FullName" value="<%= item.FullName %>" required>
          </div>
        
          <div class="input-group mb-3">
            <span class="input-group-text" id="EmailAddress">Tình trạng hôn nhân</span>
            <input id="EmailAddress" type="text" class="form-control" placeholder="Fa chứ mẹ gì nữa" aria-label="Email" aria-describedby="Item Email" name ="EmailAddress" value="<%= item.EmailAddress %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="ContactNumber">Tỉ Số</span>
            <input id="ContactNumber" type="text" class="form-control" placeholder="Tỉ Số(ghi rõ đội thắng)" aria-label="ContactNumber" aria-describedby="Item ContactNumber" name ="ContactNumber" value="<%= item.ContactNumber %>" required>
          </div>

          <% if(title == "Edit") { %>
            <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Sửa</button>
          <% } else { %>
            <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Thêm</button>
          <% } %>  
          <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Hủy</a>

    </form>
</div>